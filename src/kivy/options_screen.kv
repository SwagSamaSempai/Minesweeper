<OptionsScreen>:
    width_input: width_input
    height_input: height_input
    bombs_count_input: bombs_count_input

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        size: (250, 155)
        size_hint: (None, None)
        pos_hint: {'center_x': .5, 'center_y': .5}

        GridLayout:
            cols: 2
            rows: 3
            spacing: 5
            row_default_height: 30
            row_force_default: True
            col_default_width: 122.5
            col_force_default: True

            Label:
                text: "Width:"
            TextInput:
                id: width_input
                input_filter: 'int'
                multiline: False
                text: "10"
            Label:
                text: "Height:"
            TextInput:
                id: height_input
                input_filter: 'int'
                multiline: False
                text: "10"
            Label:
                text: "Bombs Count:"
            TextInput:
                id: bombs_count_input
                input_filter: 'int'
                multiline: False
                text: "10"

        Button:
            text: "Start!"
            height: 50
            size_hint: (1, None)
            on_release: root.start_game()
